rule "FoodYes"
	when
    	q : Question(getText() == "Food?", getAnswer() == "YES")
	then
    
	    FinalAnswer finalAnswer = new FinalAnswer();
	    finalAnswer.getBookList().add("The Omnivare's Dilemma: A Natural History of Four Meals; Michael Pollan");
		finalAnswer.setEnd(true);
		insert(finalAnswer);
end

rule "FoodNo"
    //include attributes such as "salience" here...
    when
        q : Question(getText() == "Food?", getAnswer() == "NO")
    then
        Question newQuestion = new Question("Or Business?");
       	newQuestion.addYesNo();
	    Print.showQuestion(newQuestion);
		insert(newQuestion);

end
